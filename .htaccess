# Allow ACME HTTP validation (keeps cert issuance/renewal working)
RewriteEngine On
RewriteRule ^\.well-known/acme-challenge/ - [L]

# Protect admin page with server-side Basic Auth
<Files "admin/">
  AuthType Basic
  AuthName "ALM Admin"
  AuthUserFile /home/r3ey5e1cozl4/.htpasswd
  Require valid-user
</Files>

