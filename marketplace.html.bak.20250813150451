  <main class="wrap">
    <h1>Data Card Marketplace</h1>
    <p class="lead">Browse our catalog of data cards. Click any item for full details, pricing, selects, and audience profile.</p>

    <div class="search">
      <input id="q" type="search" placeholder="Search by titleâ€¦ (e.g., Real America, Pro-Life, Veterans)">
    </div>

    <section id="cards" class="grid" aria-live="polite"></section>
  </main>

  <script>
    // Directory data (sourced from your PDFs)
    const items = [
      {id:479597, title:"Real America Donors", universe:397542, base:100, updated:"2023-10-24"},
      {id:305791, title:"Pro-Life America", universe:73761, base:100, updated:"2019-05-28"},
      {id:481240, title:"Donors to Veteran Causes", universe:27354, base:100, updated:"2018-05-29"},
      {id:401792, title:"College Republican National Committee", universe:110317, base:135, updated:"2022-03-30"},
      {id:424915, title:"Catholic Action Donors", universe:16411, base:75, updated:"2018-07-10"},
      {id:486336, title:"Build The Wall Donors", universe:53587, base:100, updated:"2019-05-17"},
      {id:586316, title:"Americans Against the Biden Agenda", universe:82949, base:100, updated:"2021-09-17"},
      {id:580140, title:"America First Patriot Donors", universe:13394, base:125, updated:"2021-08-26"},
      {id:282876, title:"Allegiant Pro-Life Conservative Donors", universe:161746, base:75, updated:"2018-10-02"}
    ];

    const el = (s, d=document)=>d.querySelector(s);
    const list = el('#cards');
    const q = el('#q');

    function fmt(n){return n.toLocaleString()}
    function cardHTML(x){
      return `
        <article class="card">
          <h2 style="font-size:1.15rem;margin:0">${x.title}</h2>
          <div class="meta">
            <span class="pill">Universe: ${fmt(x.universe)}</span>
            <span class="pill">Base Rate: $${x.base.toFixed(2)}/M</span>
            <span class="pill">Updated: ${x.updated}</span>
          </div>
          <a class="btn" href="datacard.html?id=${x.id}">View details</a>
        </article>`;
    }

    function render(filter=""){
      const f = filter.trim().toLowerCase();
      list.innerHTML = items
        .filter(x => !f || x.title.toLowerCase().includes(f))
        .sort((a,b)=>a.title.localeCompare(b.title))
        .map(cardHTML)
        .join("");
    }
    q.addEventListener('input', e=>render(e.target.value));
    render();
  </script>
